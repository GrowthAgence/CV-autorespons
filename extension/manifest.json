{
  "manifest_version": 3,
  "name": "JobBot - Job Application Automation",
  "version": "1.0.0",
  "description": "Capture job postings and automate applications with AI-powered CV and cover letter generation",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://indeed.com/*",
    "https://www.indeed.com/*",
    "https://glassdoor.com/*",
    "https://www.glassdoor.com/*",
    "https://jobs.google.com/*",
    "https://stackoverflow.com/jobs/*",
    "https://angel.co/*",
    "https://wellfound.com/*",
    "https://remote.co/*",
    "https://weworkremotely.com/*",
    "https://remoteok.io/*",
    "https://flexjobs.com/*",
    "https://upwork.com/*",
    "https://freelancer.com/*",
    "http://localhost:3000/*",
    "https://*.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://linkedin.com/jobs/*",
        "https://www.linkedin.com/jobs/*",
        "https://indeed.com/viewjob*",
        "https://www.indeed.com/viewjob*",
        "https://glassdoor.com/job-listing/*",
        "https://www.glassdoor.com/job-listing/*",
        "https://jobs.google.com/jobs/*",
        "https://stackoverflow.com/jobs/*",
        "https://angel.co/company/*/jobs/*",
        "https://wellfound.com/company/*/jobs/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobBot - Capture Job"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
